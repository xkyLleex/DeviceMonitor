<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.detectmonitor">

    <uses-permission android:name="android.permission.CAMERA"/>
    // 震動
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.DetectMonitor">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.example.detectmonitor.SettingActivity"
            android:parentActivityName="com.example.detectmonitor.MainActivity">
        </activity>

        <activity
            android:name="com.example.detectmonitor.LogActivity"
            android:parentActivityName="com.example.detectmonitor.MainActivity">
        </activity>

        <service android:name=".BackgroundService" android:exported = "false">

        </service>
    </application>

</manifest>